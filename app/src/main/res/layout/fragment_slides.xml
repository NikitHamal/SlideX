<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/md_theme_background">

    <!-- Main content area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <WebView
            android:id="@+id/slide_webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Left navigation button (hidden when only one slide) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_previous_slide"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:visibility="gone"
                app:icon="@drawable/ic_chevron_left"
                app:iconSize="24dp"
                app:iconTint="@color/md_theme_onSurface" />

            <!-- Slide counter -->
            <TextView
                android:id="@+id/slide_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:text="1/1"
                android:textColor="@color/md_theme_onSurfaceVariant"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium" />

            <!-- Right navigation button (hidden when only one slide) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_next_slide"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:visibility="gone"
                app:icon="@drawable/ic_chevron_right"
                app:iconSize="24dp"
                app:iconTint="@color/md_theme_onSurface" />

        </LinearLayout>

        <!-- Add slide button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_slide"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            app:icon="@drawable/ic_add"
            app:iconSize="24dp"
            app:iconTint="@color/md_theme_primary" />

    </LinearLayout>

</LinearLayout>
