<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/md_theme_background">

    <!-- Main content area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/slide"
            android:layout_width="320dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/md_theme_outline"
            app:cardBackgroundColor="@color/md_theme_surface">

            <!-- The slide content will be added programmatically -->

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Left navigation button (hidden when only one slide) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_previous_slide"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:visibility="gone"
                app:icon="@drawable/ic_chevron_left"
                app:iconSize="24dp"
                app:iconTint="@color/md_theme_onSurface" />

            <!-- Slide counter -->
            <TextView
                android:id="@+id/slide_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:text="1/1"
                android:textColor="@color/md_theme_onSurfaceVariant"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium" />

            <!-- Right navigation button (hidden when only one slide) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_next_slide"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:visibility="gone"
                app:icon="@drawable/ic_chevron_right"
                app:iconSize="24dp"
                app:iconTint="@color/md_theme_onSurface" />

        </LinearLayout>

        <!-- Add slide button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_slide"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            app:icon="@drawable/ic_add"
            app:iconSize="24dp"
            app:iconTint="@color/md_theme_primary" />

    </LinearLayout>

    <!-- Element Customization Bottom Toolbar -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/customization_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:cardCornerRadius="0dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/md_theme_surface"
        app:strokeWidth="1dp"
        app:strokeColor="@color/md_theme_outlineVariant">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Toolbar Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Customize Element"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textColor="@color/md_theme_onSurface" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_close_toolbar"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:icon="@drawable/ic_close"
                    app:iconSize="16dp"
                    app:iconTint="@color/md_theme_onSurfaceVariant" />

            </LinearLayout>

            <!-- Horizontal ScrollView for customization options -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/customization_options"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="4dp">

                    <!-- Text customization options (visible for text elements) -->
                    <LinearLayout
                        android:id="@+id/text_options"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <!-- Font Size -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginEnd="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Size"
                                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                                android:textColor="@color/md_theme_onSurfaceVariant"
                                android:layout_marginBottom="4dp" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
                                app:boxCornerRadiusBottomEnd="8dp"
                                app:boxCornerRadiusBottomStart="8dp"
                                app:boxCornerRadiusTopEnd="8dp"
                                app:boxCornerRadiusTopStart="8dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edit_font_size"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:textSize="12sp"
                                    android:gravity="center" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <!-- Text Color -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginEnd="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Color"
                                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                                android:textColor="@color/md_theme_onSurfaceVariant"
                                android:layout_marginBottom="4dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_text_color"
                                style="@style/Widget.Material3.Button.IconButton"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                app:cornerRadius="20dp"
                                app:strokeWidth="1dp"
                                app:strokeColor="@color/md_theme_outline" />

                        </LinearLayout>

                        <!-- Font Weight -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginEnd="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Weight"
                                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                                android:textColor="@color/md_theme_onSurfaceVariant"
                                android:layout_marginBottom="4dp" />

                            <com.google.android.material.chip.ChipGroup
                                android:id="@+id/font_weight_chips"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:singleSelection="true"
                                app:selectionRequired="true">

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chip_regular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="R"
                                    android:textSize="10sp"
                                    style="@style/Widget.Material3.Chip.Filter" />

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chip_bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="B"
                                    android:textSize="10sp"
                                    android:textStyle="bold"
                                    style="@style/Widget.Material3.Chip.Filter" />

                            </com.google.android.material.chip.ChipGroup>

                        </LinearLayout>

                        <!-- Text Alignment -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginEnd="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Align"
                                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                                android:textColor="@color/md_theme_onSurfaceVariant"
                                android:layout_marginBottom="4dp" />

                            <com.google.android.material.chip.ChipGroup
                                android:id="@+id/text_alignment_chips"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:singleSelection="true"
                                app:selectionRequired="true">

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chip_align_left"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="L"
                                    android:textSize="10sp"
                                    style="@style/Widget.Material3.Chip.Filter" />

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chip_align_center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="C"
                                    android:textSize="10sp"
                                    style="@style/Widget.Material3.Chip.Filter" />

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chip_align_right"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="R"
                                    android:textSize="10sp"
                                    style="@style/Widget.Material3.Chip.Filter" />

                            </com.google.android.material.chip.ChipGroup>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Image customization options (visible for image elements) -->
                    <LinearLayout
                        android:id="@+id/image_options"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <!-- Corner Radius -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginEnd="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Corners"
                                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                                android:textColor="@color/md_theme_onSurfaceVariant"
                                android:layout_marginBottom="4dp" />

                            <com.google.android.material.slider.Slider
                                android:id="@+id/slider_corner_radius"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:valueFrom="0"
                                android:valueTo="30"
                                android:stepSize="1" />

                        </LinearLayout>

                        <!-- Replace Image -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginEnd="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Replace"
                                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                                android:textColor="@color/md_theme_onSurfaceVariant"
                                android:layout_marginBottom="4dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_replace_image"
                                style="@style/Widget.Material3.Button.TonalButton"
                                android:layout_width="wrap_content"
                                android:layout_height="32dp"
                                android:text="Image"
                                android:textSize="10sp"
                                app:cornerRadius="16dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Shape customization options (visible for shape elements) -->
                    <LinearLayout
                        android:id="@+id/shape_options"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <!-- Fill Color -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginEnd="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fill"
                                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                                android:textColor="@color/md_theme_onSurfaceVariant"
                                android:layout_marginBottom="4dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_shape_fill_color"
                                style="@style/Widget.Material3.Button.IconButton"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                app:cornerRadius="20dp"
                                app:strokeWidth="1dp"
                                app:strokeColor="@color/md_theme_outline" />

                        </LinearLayout>

                        <!-- Stroke Color -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginEnd="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Stroke"
                                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                                android:textColor="@color/md_theme_onSurfaceVariant"
                                android:layout_marginBottom="4dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_shape_stroke_color"
                                style="@style/Widget.Material3.Button.IconButton"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                app:cornerRadius="20dp"
                                app:strokeWidth="1dp"
                                app:strokeColor="@color/md_theme_outline" />

                        </LinearLayout>

                        <!-- Stroke Width -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginEnd="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Stroke Width"
                                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                                android:textColor="@color/md_theme_onSurfaceVariant"
                                android:layout_marginBottom="4dp" />

                            <com.google.android.material.slider.Slider
                                android:id="@+id/slider_stroke_width"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:valueFrom="0"
                                android:valueTo="10"
                                android:stepSize="1" />

                        </LinearLayout>

                        <!-- Opacity -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginEnd="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Opacity"
                                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                                android:textColor="@color/md_theme_onSurfaceVariant"
                                android:layout_marginBottom="4dp" />

                            <com.google.android.material.slider.Slider
                                android:id="@+id/slider_opacity"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:valueFrom="0"
                                android:valueTo="100"
                                android:stepSize="5" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- More Options Button -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="More"
                            android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                            android:textColor="@color/md_theme_onSurfaceVariant"
                            android:layout_marginBottom="4dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_more_options"
                            style="@style/Widget.Material3.Button.IconButton"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:icon="@drawable/ic_more_horiz"
                            app:iconSize="16dp"
                            app:iconTint="@color/md_theme_onSurfaceVariant" />

                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
