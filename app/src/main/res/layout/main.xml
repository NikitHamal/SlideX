<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="@color/md_theme_background">
	<com.google.android.material.appbar.AppBarLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:elevation="0dp">

		<com.google.android.material.appbar.MaterialToolbar
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:background="@color/md_theme_surface">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center_vertical"
				android:orientation="horizontal">

				<TextView
					android:id="@+id/textview1"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="@string/app_name"
					android:textSize="20sp"
					android:fontFamily="@font/sem"
					android:textColor="@color/md_theme_onSurface"
					android:layout_marginStart="4dp" />

				<ImageView
					android:id="@+id/importIc"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:layout_marginEnd="8dp"
					android:src="@drawable/ic_code"
					android:scaleType="centerInside"
					android:background="?attr/selectableItemBackgroundBorderless"
					android:tint="@color/md_theme_onSurfaceVariant"
					android:padding="8dp" />

				<ImageView
					android:id="@+id/downloadImage"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:layout_marginEnd="8dp"
					android:src="@drawable/icon_download_round"
					android:scaleType="centerInside"
					android:background="?attr/selectableItemBackgroundBorderless"
					android:tint="@color/md_theme_primary"
					android:padding="8dp" />

			</LinearLayout>

		</com.google.android.material.appbar.MaterialToolbar>

	</com.google.android.material.appbar.AppBarLayout>
	<LinearLayout
		android:id="@+id/body"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="16dp"
		android:gravity="center_horizontal|center_vertical"
		android:orientation="vertical"
		android:layout_weight="1">
		<com.google.android.material.card.MaterialCardView
			android:id="@+id/cardview1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal|center_vertical"
			app:cardCornerRadius="16dp"
			app:cardElevation="4dp"
			app:strokeWidth="0dp"
			android:layout_margin="8dp">
			<com.google.android.material.card.MaterialCardView
				android:id="@+id/slide"
				android:layout_width="320dp"
				android:layout_height="200dp"
				app:cardCornerRadius="12dp"
				app:cardElevation="0dp" />
		</com.google.android.material.card.MaterialCardView>
		<HorizontalScrollView
			android:id="@+id/editingToolbar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"
			android:scrollbars="none"
			android:visibility="gone">
			<com.google.android.material.chip.ChipGroup
				android:id="@+id/chip_group1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<com.google.android.material.chip.Chip
					android:id="@+id/btnEditText"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					style="@style/Widget.Material3.Chip.Assist" />
				<com.google.android.material.chip.Chip
					android:id="@+id/btnChangeColor"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					style="@style/Widget.Material3.Chip.Assist" />
				<com.google.android.material.chip.Chip
					android:id="@+id/btnChangeStyle"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					style="@style/Widget.Material3.Chip.Assist" />
				<com.google.android.material.chip.Chip
					android:id="@+id/btnAddElement"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					style="@style/Widget.Material3.Chip.Assist" />
				<com.google.android.material.chip.Chip
					android:id="@+id/btnDeleteElement"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					app:chipBackgroundColor="@color/md_theme_errorContainer"
					style="@style/Widget.Material3.Chip.Assist" />
			</com.google.android.material.chip.ChipGroup>
		</HorizontalScrollView>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/bottom"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="20dp"
		android:background="@color/md_theme_surface"
		android:orientation="horizontal"
		android:elevation="8dp">
		<com.google.android.material.textfield.TextInputLayout
			android:id="@+id/textinputlayout1"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:layout_marginEnd="12dp"
			app:boxBackgroundColor="@color/md_theme_surfaceContainerLow"
			app:boxCornerRadiusTopStart="24dp"
			app:boxCornerRadiusTopEnd="24dp"
			app:boxCornerRadiusBottomStart="24dp"
			app:boxCornerRadiusBottomEnd="24dp"
			app:boxStrokeWidth="0dp"
			app:hintEnabled="false"
			style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense">
			<com.google.android.material.textfield.TextInputEditText
				android:id="@+id/userPrompt"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="16dp"
				android:textSize="15sp"
				android:fontFamily="@font/reg"
				android:textColor="@color/md_theme_onSurface"
				android:hint="Describe your slide idea..."
				android:textColorHint="@color/md_theme_onSurfaceVariant"
				android:maxLines="3"
				android:inputType="textCapSentences|textMultiLine"
				android:background="@null" />
		</com.google.android.material.textfield.TextInputLayout>
		<com.google.android.material.floatingactionbutton.FloatingActionButton
			android:id="@+id/icSend"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:src="@drawable/ic_send"
			app:fabSize="normal"
			app:tint="@color/md_theme_onPrimaryContainer"
			app:backgroundTint="@color/md_theme_primaryContainer"
			app:elevation="2dp"
			app:pressedTranslationZ="6dp" />
	</LinearLayout>
</LinearLayout>
