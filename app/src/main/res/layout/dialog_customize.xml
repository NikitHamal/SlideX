<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_theme_surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Text Element Customization Section -->
        <LinearLayout
            android:id="@+id/text_customization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text Content"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:textColor="@color/md_theme_onSurface"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxBackgroundColor="@color/md_theme_surfaceContainerLow"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxStrokeWidth="0dp"
                app:hintEnabled="false"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:gravity="top|start"
                    android:padding="12dp"
                    android:textColor="@color/md_theme_onSurface"
                    android:fontFamily="@font/reg" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Font Size"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:textColor="@color/md_theme_onSurface"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxBackgroundColor="@color/md_theme_surfaceContainerLow"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxStrokeWidth="0dp"
                app:hintEnabled="false"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_font_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:padding="12dp"
                    android:textColor="@color/md_theme_onSurface"
                    android:fontFamily="@font/reg" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text Color"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:textColor="@color/md_theme_onSurface"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_color"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Select Color"
                android:textColor="@color/md_theme_onPrimary"
                app:cornerRadius="24dp"
                android:layout_marginBottom="16dp"
                style="@style/Widget.Material3.Button" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Font Style"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:textColor="@color/md_theme_onSurface"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/radio_font_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:singleSelection="true"
                app:selectionRequired="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/radio_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Regular"
                    android:checked="true"
                    style="@style/Widget.Material3.Chip.Filter" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/radio_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medium"
                    style="@style/Widget.Material3.Chip.Filter" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/radio_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bold"
                    style="@style/Widget.Material3.Chip.Filter" />
            </com.google.android.material.chip.ChipGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text Alignment"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:textColor="@color/md_theme_onSurface"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/radio_alignment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:singleSelection="true"
                app:selectionRequired="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/radio_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Left"
                    android:checked="true"
                    style="@style/Widget.Material3.Chip.Filter" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/radio_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Center"
                    style="@style/Widget.Material3.Chip.Filter" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/radio_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Right"
                    style="@style/Widget.Material3.Chip.Filter" />
            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>

        <!-- Image Element Customization Section -->
        <LinearLayout
            android:id="@+id/image_customization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Image Source"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:textColor="@color/md_theme_onSurface"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_pick_image"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Pick Image from Device"
                android:textColor="@color/md_theme_onPrimary"
                app:cornerRadius="24dp"
                android:layout_marginBottom="16dp"
                style="@style/Widget.Material3.Button" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Image URL"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:textColor="@color/md_theme_onSurface"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxBackgroundColor="@color/md_theme_surfaceContainerLow"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxStrokeWidth="0dp"
                app:hintEnabled="false"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_image_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:textColor="@color/md_theme_onSurface"
                    android:fontFamily="@font/reg" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Corner Radius"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:textColor="@color/md_theme_onSurface"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.slider.Slider
                android:id="@+id/seekbar_corner_radius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="0"
                android:valueTo="30"
                android:stepSize="1"
                android:layout_marginBottom="16dp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_lock_aspect_ratio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lock Aspect Ratio"
                android:checked="true"/>
        </LinearLayout>

        <!-- Shape Element Customization Section -->
        <LinearLayout
            android:id="@+id/shape_customization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shape Type"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:textColor="@color/md_theme_onSurface"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/spinner_shape_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                <AutoCompleteTextView
                    android:id="@+id/edit_shape_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:textColor="@color/md_theme_onSurface"
                    android:fontFamily="@font/reg" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fill Color"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:textColor="@color/md_theme_onSurface"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_shape_color"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Select Fill Color"
                android:textColor="@color/md_theme_onPrimary"
                app:cornerRadius="24dp"
                android:layout_marginBottom="16dp"
                style="@style/Widget.Material3.Button" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stroke Color"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:textColor="@color/md_theme_onSurface"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_stroke_color"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Select Stroke Color"
                android:textColor="@color/md_theme_onPrimary"
                app:cornerRadius="24dp"
                android:layout_marginBottom="16dp"
                style="@style/Widget.Material3.Button" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opacity"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:textColor="@color/md_theme_onSurface"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.slider.Slider
                android:id="@+id/seekbar_opacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="0"
                android:valueTo="100"
                android:stepSize="1"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Corner Radius (for rectangles)"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:textColor="@color/md_theme_onSurface"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.slider.Slider
                android:id="@+id/seekbar_shape_corner_radius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="0"
                android:valueTo="30"
                android:stepSize="1"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stroke Width"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:textColor="@color/md_theme_onSurface"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.slider.Slider
                android:id="@+id/seekbar_stroke_width"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="0"
                android:valueTo="10"
                android:stepSize="1"
                android:layout_marginBottom="16dp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_shape_lock_aspect_ratio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lock Aspect Ratio"
                android:checked="true"/>
        </LinearLayout>

        <!-- Table Element Customization Section -->
        <LinearLayout
            android:id="@+id/table_customization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Header Color"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:textColor="@color/md_theme_onSurface"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_header_color"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Select Header Color"
                android:textColor="@color/md_theme_onPrimary"
                app:cornerRadius="24dp"
                android:layout_marginBottom="16dp"
                style="@style/Widget.Material3.Button" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cell Color"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:textColor="@color/md_theme_onSurface"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cell_color"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Select Cell Color"
                android:textColor="@color/md_theme_onPrimary"
                app:cornerRadius="24dp"
                android:layout_marginBottom="16dp"
                style="@style/Widget.Material3.Button" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Border Color"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:textColor="@color/md_theme_onSurface"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_border_color"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Select Border Color"
                android:textColor="@color/md_theme_onPrimary"
                app:cornerRadius="24dp"
                android:layout_marginBottom="16dp"
                style="@style/Widget.Material3.Button" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Border Width"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:textColor="@color/md_theme_onSurface"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.slider.Slider
                android:id="@+id/seekbar_border_width"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="0"
                android:valueTo="5"
                android:stepSize="1"
                android:layout_marginBottom="16dp" />
        </LinearLayout>

        <!-- Chart Customization Section -->
        <LinearLayout
            android:id="@+id/chart_customization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chart Type"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chart_type_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                android:layout_marginBottom="16dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bar"
                    style="@style/Widget.Material3.Chip.Filter"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_pie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pie"
                    style="@style/Widget.Material3.Chip.Filter"/>
            </com.google.android.material.chip.ChipGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chart Data (JSON)"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_chart_data"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:inputType="textMultiLine"
                    android:fontFamily="monospace"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- Icon Customization Section -->
        <LinearLayout
            android:id="@+id/icon_customization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Icon Selection"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_marginBottom="16dp">

                <AutoCompleteTextView
                    android:id="@+id/icon_selector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select icon"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Icon Color"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_icon_color"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Select Color"
                style="@style/Widget.Material3.Button"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>

        <!-- Arrange Section -->
        <LinearLayout
            android:id="@+id/arrange_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arrange"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.slider.Slider
                android:id="@+id/slider_rotation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="0"
                android:valueTo="360"
                android:stepSize="1"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_bring_to_front"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bring to Front"
                    style="@style/Widget.Material3.Button.OutlinedButton"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_send_to_back"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Send to Back"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>